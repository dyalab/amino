FROM ubuntu:jammy

ENV PKGS="build-essential gfortran f2c autoconf automake libtool autoconf-archive autotools-dev maxima libblas-dev liblapack-dev libsdl2-dev libboost-filesystem-dev libboost-program-options-dev libboost-python-dev libboost-serialization-dev libboost-system-dev libboost-test-dev doxygen groff sbcl python3 flex povray ffmpeg coinor-libclp-dev libglpk-dev liblpsolve55-dev libnlopt-dev wget git cmake libccd-dev libompl-dev libfcl-dev liboctomap-dev blender valgrind"

RUN DEBIAN_FRONTEND="noninteractive" \
    apt-get -y update && apt-get install -y -d $PKGS


RUN echo 'tzdata tzdata/Areas select US' | debconf-set-selections
RUN echo 'tzdata tzdata/Zones/US select Denver' | debconf-set-selections

RUN DEBIAN_FRONTEND="noninteractive" apt-get install -y $PKGS

COPY ./script/install /root/amino/script/install

RUN cd && /root/amino/script/install/install-quicklisp.sh

RUN cd && git clone https://github.com/RethinkRobotics/baxter_common

ENV ROS_PACKAGE_PATH=/root/baxter_common

COPY . /root/amino

# Local Variables:
# mode: dockerfile
# End:
